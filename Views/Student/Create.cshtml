@model Student;
@{
    ViewData["Title"] = "ບັນທືກຂໍ້ມູນ";
}

<h1 class="text-center">ບັນທືກຂໍ້ມູນ</h1>

<form method="POST" asp-controller="Student" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="text" asp-for="Score" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary my-2">ບັນທຶກ</button>
</form>